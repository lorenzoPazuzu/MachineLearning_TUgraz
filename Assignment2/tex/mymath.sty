\newcommand{\E}{\mathbb{E}}
\newcommand{\cov}{\mathbb{C}\text{ov}}
\newcommand{\cor}{\mathbb{C}\text{or}}
\newcommand{\var}{\mathbb{V}\text{ar}}
\newcommand{\p}{\mathbb{P}}
\newcommand{\N}{\mathbb{N}}
\newcommand{\R}{\mathbb{R}}

\newcommand{\thmstr}{Theorem}
\newcommand{\lemstr}{Lemma}
\newcommand{\corstr}{Corollary}
\newcommand{\defstr}{Definition}
\newcommand{\remstr}{Remark}

\DeclareOption{english}{
\renewcommand{\thmstr}{Theorem}
\renewcommand{\lemstr}{Lemma}
\renewcommand{\corstr}{Corollary}
\renewcommand{\defstr}{Definition}
\renewcommand{\remstr}{Remark}
}

\DeclareOption{german}{
\renewcommand{\thmstr}{Satz}
\renewcommand{\lemstr}{Lemma}
\renewcommand{\corstr}{Korollar}
\renewcommand{\defstr}{Definition}
\renewcommand{\remstr}{Bemerkung}
}
\ProcessOptions\relax

\newtheorem{theorem}{\thmstr}
\newtheorem{lemma}[theorem]{\lemstr}
\newtheorem{corollary}[theorem]{\corstr}
\theoremstyle{definition}
\newtheorem{definition}[theorem]{\defstr}
\newtheorem{remark}[theorem]{\remstr}

\newtheorem{manualtheoreminner}{Theorem}
\newenvironment{nulemma}[1]{%
  \renewcommand\thetheorem{#1}%
  \lemma
}{\endlemma}
